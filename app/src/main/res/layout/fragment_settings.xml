<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:id="@+id/layout_settings">

        <RelativeLayout
            android:padding="28dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_circleImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/avatar"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/change_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:background="@drawable/circle_background_2"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_info"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="12dp"
            style="@android:style/TextAppearance.Medium"
            android:drawableEnd="@drawable/ic_edit_black_24dp"/>

        <TextView
            android:id="@+id/done_editing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:drawablePadding="12dp"
            style="@android:style/TextAppearance.Medium"
            android:drawableEnd="@drawable/ic_tick"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:animateLayoutChanges="true"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_outline"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:clickable="true"
                        android:focusable="true"
                        style="@android:style/TextAppearance.Small"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:id="@+id/settings_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/TextAppearance.Medium"
                        android:text="@string/app_name"
                        android:textIsSelectable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name_info"
                        style="@android:style/TextAppearance.Small"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_margin="4dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/change_name"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:animateLayoutChanges="true"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_outline_black_24dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:clickable="true"
                        android:focusable="true"
                        style="@android:style/TextAppearance.Small"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:id="@+id/settings_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/TextAppearance.Medium"
                        android:textIsSelectable="true"
                        android:text="@string/status"
                        android:layout_margin="4dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/change_status"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mail_outline"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/e_mail"
                        style="@android:style/TextAppearance.Small"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:id="@+id/settings_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        style="@android:style/TextAppearance.Medium"
                        android:text="@string/e_mail"
                        android:layout_margin="4dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/change_email"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:animateLayoutChanges="true"
                android:layout_marginBottom="4dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:id="@+id/settings_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/TextAppearance.Medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/change_password"
                        android:layout_margin="4dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/change_pass"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/layout_accent_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_color_lens"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/TextAppearance.Medium"
                        android:text="@string/select_accent_color"
                        android:layout_margin="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/layout_check_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_update"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/TextAppearance.Medium"
                        android:text="@string/check_for_update"
                        android:layout_margin="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_log_out"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/layout_logout"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/TextAppearance.Medium"
                        android:text="@string/log_out"
                        android:layout_margin="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>